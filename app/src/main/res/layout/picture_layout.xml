<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >





        <LinearLayout
                android:id="@+id/left_column"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                style="@style/VerticalColumn">


            <LinearLayout
                    android:id="@+id/right_column"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    style="@style/VerticalColumn">

                <ImageView
                        android:id="@+id/img_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/afterglow_beach_cliff_2555285"
                        android:padding="0dp"
                        android:adjustViewBounds="true"
                        style="@style/imgStyle"
                        android:contentDescription="@string/beach_cliff"
                />

            </LinearLayout>
            <ImageView
                    android:id="@+id/img_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/abstract_abstract_expressionism_art_2505693"
                    android:adjustViewBounds="true"
                    style="@style/imgStyle"
                    android:contentDescription="@string/flowers"/>
        </LinearLayout>
    </LinearLayout>



</ScrollView>
